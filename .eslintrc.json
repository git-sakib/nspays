{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true        
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "max-len": ["error", { "code": 200 }]
    }
}
